# Never show the lecture on first use
# For some reasons sudo does not save a
# lecture-status in docker containers
Defaults lecture = never

# Some sudo-programs
icinga ALL=(root)NOPASSWD:/usr/sbin/smartctl
icinga ALL=(root)NOPASSWD:/usr/lib/icinga/plugins/check_dhcp
icinga ALL=(root)NOPASSWD:/usr/lib/icinga/plugins/check_disk
icinga ALL=(root)NOPASSWD:/sbin/dmsetup status --noflush
icinga ALL=(root)NOPASSWD:/sbin/dmsetup status
